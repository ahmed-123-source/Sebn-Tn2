{% extends 'afficher.html.twig' %}

{% block title %}Audit index{% endblock %}

{% block body %}
    <h1>Audit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Projet</th>
                <th>Score</th>
                <th>Points_cntrl</th>
                <th>Description</th>
                <th>Defaillances</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for audit in audits %}
            <tr>
                <td>{{ audit.id }}</td>
                <td>{{ audit.Projet }}</td>
                <td>{{ audit.Score }}</td>
                <td>{{ audit.PointsCntrl }}</td>
                <td>{{ audit.Description }}</td>
                <td>{{ audit.Defaillances }}</td>
                <td>
                    <a href="{{ path('app_audit_show', {'id': audit.id}) }}">show</a>
                    <a href="{{ path('app_audit_edit', {'id': audit.id}) }}">edit</a>

                    <a href="{{ path('app_audit_show', {'id': audit.id}) }}" class="btn btn-primary" style="font-size:15px;">show</a>
                    <a href="{{ path('app_audit_edit', {'id': audit.id}) }}" class="btn btn-info" style="font-size:15px;">edit</a>
                    <a href="{{ path('app_audit_delete', {'id': audit.id}) }}" class="btn btn-danger" style="font-size:15px;">Delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_audit_new') }}" class="btn btn-primary" style="position: center;">Create new</a>
{% endblock %}
