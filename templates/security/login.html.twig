{% extends 'login-front.html.twig' %}
{% block title %}Log in!{% endblock %}


       

{% block body %}
{% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %} 
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

   

    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    
    <br>
    <br>
    <br>
    <div class="email">
    <label for="inputEmail">Email</label>
    <div class="sec-2">
    <ion-icon name="mail-outline"></ion-icon>
    <input type="email" value="{{ last_username }}" name="email" placeholder="Username@gmail.com" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
</div>
    </div>

    <div class="password">
        <label for="inputPassword">Password</label>
        <div class="sec-2">
    <ion-icon name="lock-closed-outline"></ion-icon>
    <input type="password" name="password" placeholder="············" id="inputPassword" class="form-control" autocomplete="current-password" required>
    <ion-icon class="show-hide" name="eye-outline"></ion-icon>
</div>
</div>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
    {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
         See https://symfony.com/doc/current/security/remember_me.html
        #}
        
        <br>
        <br>
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
  <span><a href="{{path('app_forgot_password_request')}}"></a>Forgot Password?</span><button script="padding: 1em;" class="login" type="submit">
    Login
</button>


    
</form>

{% endblock %}
